<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">
	
<struts>
	<constant name="struts.devMode" value="true"/>
	<constant name="struts.i18n.encoding" value="UTF-8"/>
	
	<package name="Login" extends="struts-default">
		<interceptors>
			<interceptor name="interceptor_action" class="token.ActionInterceptor" />
			<interceptor-stack name="interceptor_stack_action">
				<interceptor-ref name="interceptor_action" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>
		
		<!--设置全局过滤器-->
		<default-interceptor-ref name="interceptor_stack_action" />
		
		<!--设置全局result页面-->
		<global-results>
			<result name="error"> error.jsp</result>
		</global-results>
		
		<!--动作：login配置-->
		<action name="login" class="action.login.LoginAction" method="execute">
			<result name="login"> login.jsp</result>
			<result name="success" type="redirect"> menu.action</result>
			<!--该登录动作不受token过滤器影响-->
			<interceptor-ref name="defaultStack" />
		</action>
		<action name="logout" class="action.login.LoginAction" method="logout">
			<result> login.jsp</result>
			<!--该登录动作不受token过滤器影响-->
			<interceptor-ref name="defaultStack" />
		</action>
		
		<!--动作：menu配置-->
		<action name="menu" class="action.login.MenuAction" method="execute">
			<result name="教务处">	jwc.jsp</result>
			<result name="教务员">	jwy.jsp</result>
			<result name="教学院长">	jxyz.jsp</result>
			<result name="领导">		ld.jsp</result>
			<result name="教师">		js.jsp</result>
			<result> login.jsp</result>
		</action>
		
		<!--动作：inner_info配置-->
		<action name="inner_info" class="action.login.InnerInfoAction" method="execute">
			<result> inner_info.jsp</result>
			<result name="none"> inner_info.jsp</result>
		</action>
		
		<!--动作：SQL Operation配置-->
		<action name="jwc_sql_operation_select" class="action.jwc.sqloperation.SQLOperationSelectAction" method="execute">
			<result name="none"> jwc_sql_operation_select.jsp</result>
			<result> jwc_sql_operation_select.jsp</result>
		</action>
		
		<action name="jwc_timeManager" class="action.jwc.TimeManagerAction" method="execute">
			<result name="none"> jwc_timeManager.jsp</result>
			<result> jwc_timeManager.jsp</result>
		</action>
		
		
		
		
		
	</package>
	
	
</struts>
